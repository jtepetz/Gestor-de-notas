INICIO
    // Inicialización
    Cursos = [] // Lista para nombres de cursos
    Notas = []  // Lista para notas
    Opcion = 0

    MIENTRAS Opcion != 5 HACER
        IMPRIMIR "--- Gestor de Notas Académicas ---"
        IMPRIMIR "1. Registrar nuevo curso y nota" // Avance 2
        IMPRIMIR "2. Mostrar todas las notas"       // Avance 2
        IMPRIMIR "3. Calcular promedio general"     // Avance 2
        IMPRIMIR "4. Actualizar nota de curso"      // NUEVA OPCIÓN (Avance 3)
        IMPRIMIR "5. Salir"                         // Opción de salida
        IMPRIMIR "-----------------------------------"
        LEER Opcion

        SI Opcion ES 4 ENTONCES
            // Lógica detallada en la sección 2
            LLAMAR Subrutina_Actualizar_Nota(Cursos, Notas)
        SINO_SI Opcion ES ... ENTONCES
            // Otras opciones
        FIN_SI
    FIN_MIENTRAS
FIN
